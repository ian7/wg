<%= form_for(@expense) do |f| %>
  <% if @expense.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@expense.errors.count, "error") %> prohibited this expense from being saved:</h2>

      <ul>
      <% @expense.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :date %><br />
    <%= f.text_field :date %>
  </div>
  <div class="field">
    <%= f.label :person %><br />
  <% Flatmate.all.each do |fl| %> 
     <%= f.radio_button :person, fl.name %>
     <%= fl.name %>  
   <% end %>
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :value %><br />
    <%= f.text_field :value %>
  </div>
  <div class="field">
    <%= f.label :currency %><br />
    <%= f.text_field :currency %>
  </div>
  
  <div class="field">

  <%= f.label :shareholders %><br />
  <% Flatmate.all.each do |fl| %> 
     <%= f.check_box :shareholders, {:multiple => false, :checked=>@expense.shareholders.include?(fl.name)}, fl.name, nil %>
     <%= fl.name %>  
   <% end %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
